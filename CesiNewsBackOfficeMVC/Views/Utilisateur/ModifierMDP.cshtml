@{
    ViewData["Title"] = "Modifier le mot de passe";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header text-white" style="background-color: #286291;">
                    <h3 class="mb-0">Modifier mon mot de passe</h3>
                </div>
                <div class="card-body">
                    @if (ViewData["Message"] != null)
                    {
                        <div class="alert alert-info">@ViewData["Message"]</div>
                    }

                    <form asp-action="ModifierMDP" method="post">
                        <div class="form-group mb-3">
                            <label for="ancienMdp" class="form-label fw-bold">Mot de passe actuel</label>
                            <input type="password" name="ancienMdp" class="form-control" required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="nouveauMdp" class="form-label fw-bold">Nouveau mot de passe</label>
                            <input type="password" name="nouveauMdp" class="form-control" required />
                        </div>

                        <div class="form-group mb-4">
                            <label for="confirmationMdp" class="form-label fw-bold">Confirmer le mot de passe</label>
                            <input type="password" name="confirmationMdp" class="form-control" required />
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn text-white" style="background-color: #286291;">Valider</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
