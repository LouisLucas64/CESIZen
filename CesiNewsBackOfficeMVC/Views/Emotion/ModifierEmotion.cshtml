@model CESIZenModel.Entities.Emotion

@{
    ViewData["Title"] = "Modifier une émotion";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header text-white" style="background-color: #286291;">
                    <h3 class="mb-0">Modifier une émotion</h3>
                </div>
                <div class="card-body">
                    <form asp-action="ModifierEmotion" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="Nom_Emotion_Niveau1" class="form-label fw-bold"></label>
                            <input asp-for="Nom_Emotion_Niveau1" class="form-control" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Nom_Emotion_Niveau2" class="form-label fw-bold"></label>
                            <input asp-for="Nom_Emotion_Niveau2" class="form-control" />
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn text-white" style="background-color: #286291;">Enregistrer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>